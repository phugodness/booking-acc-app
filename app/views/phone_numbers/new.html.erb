<div class="container">
  <div class="row">
    <h2>To create your our business we need your verification</h2>
  </div>
  <div id="send-pin">
    <h4>What's your phone number?</h4>
    <%= form_for @phone_number, remote: true  do |f| %>
      <div class="form-group">
        <%= f.hidden_field :user_id, value: current_user.id%>
        <%= f.text_field :phone_number, placeholder: 'For example: +84973445437' %>
      </div>
      <%= f.submit 'Send PIN', class: 'btn btn-xl', id: 'send-pin-link' %>
    <% end %>
  </div>
  <div id="verify-pin">
  <h4>Enter your PIN</h4>
  <%= form_tag phone_numbers_verify_path, remote: true do |f| %>
    <%= hidden_field_tag 'hidden_phone_number', '' %>
    <%= hidden_field_tag 'user_id', '' %>
    <div class="form-group">
      <%= text_field_tag :pin %>
    </div>
    <%= submit_tag "Verify PIN", class: "btn btn-xl" %>
    <% end %>
  </div>

  <div id="status-box" class="alert alert-success">
    <p id="status-message">Status: Havenâ€™t done anything yet</p>
  </div>

</div>

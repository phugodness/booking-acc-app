<div class="container " style="  border-radius: 2px;
  border: 1px solid #242729;
  background-color: #535a60;
  color: #e4e6e8;
  padding: 10px;
  box-shadow: 0 1px rgba(12, 13, 14, 0.3);
  position: relative;">
    <div class="row">
      <div class="col-md-4">
        <div class="col-md-6" style="text-align: center;">
          <%if @user.provider == 'facebook'%>
            <%= image_tag(@user.image_file_name, class: "img-circle", style: 'width: 150px;') %>
          <% else %>
            <%= image_tag(@user.image.url(:original), class: "img-circle", style: 'width: 150px;')%>
          <% end %>
          <hr>
          <b>
            <%= @user.name%>
          </b>
          <hr>
          <i>
            <%= @user.try(:phone_number).try(:verified)? 'Verified' : 'Not Verified'%>
            <% if @user.try(:phone_number).try(:verified)%>
              <%= image_tag 'tick.ico', size: '10'%>
            <% end %>
          </i>
          <hr>
        </div>
      </div>
      <div class="col-md-8">
        <div class="">
          <% if @user.try(:phone_number).try(:verified)%>
            <%= @user.try(:phone_number).phone_number%>
          <% end %>
        </div>
        <div>
          <%= @user.name %>
        </div>
        <div class="row">
          <div class="col-md-3">
            <%= @user.gender ? 'Male' : 'Female' %>
          </div>
        </div>
        <div>
          <%= @user.date_of_birth.strftime('%d-%m-%Y') if @user.date_of_birth.present?%>
        </div>
        <div class="field">
          <%= @user.email%>
        </div>
      </div>
    </div>
</div>

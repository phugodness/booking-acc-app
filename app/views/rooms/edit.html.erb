<div class="container">

  <h1>Editing Room</h1>

  <%= render 'form', room: @room %>

  <%= link_to 'Show This Room', @room, class: "btn btn-xl" %>
    <% if can? :destroy, @room %>
      <%= link_to 'Destroy This Room', room_path(@room), class: "btn btn-xl", method: :delete, 'data-confirm': 'Are you Sure?'%>
    <% end %>
</div>

<p id="notice"><%= notice %></p>

<h1>Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Type of room</th>
      <th>User</th>
      <th>Name</th>
      <th>Address</th>
      <th>Number of guest</th>
      <th>Price</th>
      <th>Accomodates</th>
      <th>Number of bed</th>
      <th>Description</th>
      <th>House rules</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.type_of_room.name %></td>
        <td><%= room.user.name %></td>
        <td><%= room.name %></td>
        <td><%= room.address %></td>
        <td><%= room.number_of_guest %></td>
        <td><%= room.price %></td>
        <td><%= room.accomodates %></td>
        <td><%= room.number_of_bed %></td>
        <td><%= room.description %></td>
        <td><%= room.house_rules %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


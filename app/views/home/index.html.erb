<%= render 'layouts/nav'%>

<!-- Header -->
<header>
  <div class="container">
    <div class="intro-text">
      <%= render 'search'%>
      <div class="intro-lead-in">Welcome To Our Website!</div>
      <div class="intro-heading">It's Nice To Meet You</div>
    </div>
  </div>
</header>

<!-- Portfolio Grid Section -->
<% if @rooms.present?%>
  <section id="portfolio" class="bg-light-gray">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h2 class="section-heading">New Rooms</h2>
          <h3 class="section-subheading text-muted">Newest rooms from all around the world!</h3>
        </div>
      </div>
      <div class="row">
        <% @rooms.each_with_index do |room, i|%>
          <div class="col-md-4 col-sm-6 portfolio-item">
            <a href="#portfolioModal<%=room.id%>" class="portfolio-link" data-toggle="modal">
              <div class="portfolio-hover">
                <div class="portfolio-hover-content">
                    <i class="fa fa-plus fa-3x"></i>
                </div>
              </div>
              <% if room.image_rooms.present?%>
                <%= image_tag room.image_rooms.first.image.url, class:"img-responsive"%>
              <% end %>
            </a>
            <div class="portfolio-caption">
              <h4><%= room.name%></h4>
              <p class="text-muted"><%= room.address%></p>
            </div>
          </div>
        <% end%>
      </div>
    </div>
  </section>
<% end %>
<% @rooms.each_with_index do |room, i|%>
  <%= render partial: 'room', locals:{room: room, hash: @hash[i]}%>
<% end %>
<!-- About Section -->
<section id="about">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">About</h2>
                <h3 class="section-subheading text-muted">Lorem ipsum dolor sit amet consectetur.</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <ul class="timeline">
                    <li>
                        <div class="timeline-image">
                            <img class="img-circle img-responsive" src="img/about/1.jpg" alt="">
                        </div>
                        <div class="timeline-panel">
                            <div class="timeline-heading">
                                <h4>2-2017</h4>
                                <h4 class="subheading">Our Story Begins</h4>
                            </div>
                            <div class="timeline-body">
                                <p class="text-muted">I kick off the project with the passion of airbnb replacement</p>
                            </div>
                        </div>
                    </li>
                    <li class="timeline-inverted">
                        <div class="timeline-image">
                            <img class="img-circle img-responsive" src="img/about/2.jpg" alt="">
                        </div>
                        <div class="timeline-panel">
                            <div class="timeline-heading">
                                <h4>5-2017</h4>
                                <h4 class="subheading">An Agency is Born</h4>
                            </div>
                            <div class="timeline-body">
                                <p class="text-muted">The very first version of the website has been test before deploying</p>
                            </div>
                        </div>
                    </li>
                    <li class="timeline-inverted">
                        <div class="timeline-image">
                            <h4>Be Part
                                <br>Of Our
                                <br>Story!</h4>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>

<!-- Team Section -->
<section id="team" class="bg-light-gray">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Me</h2>
                <h3 class="section-subheading text-muted">A simple man</h3>
            </div>
        </div>
        <div class="row">
            <div style="text-align: center;">
                <div class="team-member">
                    <%= image_tag 'me.jpg', class: "img-responsive img-circle"%>
                    <h4>Truong Van Phu</h4>
                    <p class="text-muted">Developer</p>
                    <ul class="list-inline social-buttons">
                        <li><a href="https://twitter.com/phugodness" target="_blank"><i class="fa fa-twitter"></i></a>
                        </li>
                        <li><a href="https://fb.com/phugodness" target="_blank"><i class="fa fa-facebook"></i></a>
                        </li>
                        <li><a href="https://www.linkedin.com/in/truong-van-phu-b9a80b118/" target="_blank"><i class="fa fa-linkedin"></i></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 text-center">
                <p class="large text-muted">If you have any questions, feel free to ask me at any time ASAP</p>
            </div>
        </div>
    </div>
</section>

<!-- Contact Section -->
<section id="contact">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2 class="section-heading">Contact Us</h2>
                <h3 class="section-subheading text-muted">Please help us improve your experience</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <form name="sentMessage" id="contactForm" novalidate>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Your Name *" id="name" required data-validation-required-message="Please enter your name.">
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <input type="email" class="form-control" placeholder="Your Email *" id="email" required data-validation-required-message="Please enter your email address.">
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <input type="tel" class="form-control" placeholder="Your Phone *" id="phone" required data-validation-required-message="Please enter your phone number.">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <textarea class="form-control" placeholder="Your Message *" id="message" required data-validation-required-message="Please enter a message."></textarea>
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="col-lg-12 text-center">
                            <div id="success"></div>
                            <button type="submit" class="btn btn-xl">Send Message</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
